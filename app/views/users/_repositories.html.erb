<div class="col s12 m8 offset-m2 l6 offset-l3">
  <div class="card-panel grey lighten-5 z-depth-1">
    <h3 class="center">Repositories</h3>
    <div class="row valign-wrapper">
      <div class="col s12">
        <table>
          <thead>
            <tr>
                <th data-field="repo-name">Repository</th>
                <th data-field="url">URL</th>
            </tr>
          </thead>

          <tbody>
            <% @github_service.repos.each do |repo| %>
            <tr>
              <td><%= repo[:name] %></td>
              <td><%= link_to repo[:html_url], repo[:html_url] %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
